<div class="movies-page">
    <h1>Ironhack Cinema</h1>
    <p>Click on the movie to check the showtimes! </p>

    <div class="container">

        {{#each movies}}
        <div class="movies">
            <img src="{{this.image}}" alt="movie cover">
            <h2> {{this.title}}</h2>
            <a href="/movies/{{this._id}}">See more</a>
        </div>
        {{/each}}

    </div>

</div>